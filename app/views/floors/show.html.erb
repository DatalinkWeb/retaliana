<div class="large-3 small-12 column">
  <%= image_tag @floor.poster %>
</div>

<div class="large-9 small-12 column">
  <h3>
    <%= @floor.name %>
    (<%= @floor.quantity %>)
    <%=link_to @floor.details do%>
      <%=image_tag asset_path("vendor-icon.png") %>
    <% end %>
  </h3>
  <p class="label floor-label radius mb1">$ <%= @floor.price %></p>

  <p><%= @floor.description %></p>
</div>

<%if signed_in?%>
  <%=link_to "", class: "button", data: {target: @cart_action, addUrl: add_to_cart_path(@floor), removeUrl: remove_from_cart_path(@floor)} do%>
    <i class="fi-shopping-cart"></i>
    <span><%=@cart_action%></span> Cart
  <%end%>
<%end%>